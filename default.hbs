<!doctype html>
<html lang="en">	
	<head>
	    {{! Document Settings }}
	    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
	    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	    {{! Page Meta }}
	    <title>{{meta_title}}</title>
	    <meta name="description" content="{{meta_description}}" />
	    <link rel="shortcut icon" href="{{@blog.logo}}"/>
			{{! Styles }}
	    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,700italic,300,700' rel='stylesheet' type='text/css'>
			<link href='http://fonts.googleapis.com/css?family=Bree+Serif' rel='stylesheet' type='text/css'>
			<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">			
			<link rel="stylesheet" type="text/css" href="{{asset '/styles/crisp.css'}}">
			<link rel="stylesheet" type="text/css" href="{{asset '/styles/github.css'}}">
			{{! Responsive Meta Tags }}
	    <meta name="HandheldFriendly" content="True" />
	    <meta name="MobileOptimized" content="320" />
	    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
			<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
			<!--[if lt IE 9]>
				<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
				<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
			<![endif]-->  
			{{{block "head"}}}  
	    {{ghost_head}}
	</head>
	<body class="{{body_class}}">
	
		<header id="header">
				

			{{#if @blog.logo}}<a id="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
			<h1><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
			<p>{{@blog.description}}</p>
			
			{{! ENABLE FOLLOW }}
			{{> follow}}
			{{> navigation}}



		</header>
		<main id="content">
			{{{body}}}
			<div class="push"></div>
		</main>
		<footer id="footer">
			<section id="footer-message">&copy; {{date format='YYYY'}} {{@blog.title}}. All rights reserved. Powered by <a class="icon-ghost" href="http://ghost.org" target="_blank"><span class="hidden">Ghost</span></a>. Published with <a class="icon-shirt" href="https://github.com/kathyqian/crisp-ghost-theme" target="_blank"><span class="hidden">Crisp Linen Shirt</span></a>.


		
		</footer>



	{{ghost_foot}}

	{{! Le' JavaScript}}
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
	<script type="text/javascript" src="{{asset "js/jquery.fitvids.js"}}"></script>
	<script type="text/javascript" src="/assets/js/index.js"></script>
	<script src="/assets/js/highlight.pack.js"></script>  
	<script>hljs.initHighlightingOnLoad();</script>  
	<!-- Typography / SmartyPants -->
	<!-- typogr should be a local resource -->
	<script type="text/javascript" src="{{asset '/js/typogr.min.js'}}"></script>
	<script>
		$(document).ready(function() {
			// $('#header').html(typogr.typogrify($('#header'))); // Header gets messed at icons?
    		$('main').html(typogr.typogrify($('main')));
		})
	</script>

	</body>
</html>